{
    "compilerOptions": {
        "module": "Commonjs",
        "target": "es6",
        "noImplicitAny": true,
        "preserveConstEnums": true,
        "outDir": "dist/src",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "esnext.intl"
        ]
    },
    "include": [
        "src-ts/**/*",
        "tests/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}